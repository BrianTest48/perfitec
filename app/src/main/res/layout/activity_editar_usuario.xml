<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context=".usuarios.EditarUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MODIFICAR USUARIO"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/txt_editar_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:drawableLeft="@drawable/icono_person"
                    android:background="@drawable/border_edit"
                    android:drawablePadding="10dp"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/tvt_editar_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="l"
                    android:textColor="@color/white"
                    android:textSize="0sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txt_editar_apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="text"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:drawableLeft="@drawable/icono_person"
                    android:background="@drawable/border_edit"
                    android:drawablePadding="10dp"
                    android:padding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txt_editar_celular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Celular"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:drawableLeft="@drawable/icono_celular"
                    android:background="@drawable/border_edit"
                    android:drawablePadding="10dp"
                    android:padding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txt_editar_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="ContraseÃ±a"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:drawableLeft="@drawable/icono_password"
                    android:background="@drawable/border_edit"
                    android:drawablePadding="10dp"
                    android:padding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txt_editar_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="D N I"
                    android:inputType="number"
                    android:elevation="@dimen/cardview_default_elevation"
                    android:drawableLeft="@drawable/icono_dni"
                    android:background="@drawable/border_edit"
                    android:drawablePadding="10dp"
                    android:padding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROL:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <Spinner
                    android:id="@+id/spn_editar_rol"
                    android:layout_width="match_parent"
                    android:entries="@array/rol_usuario"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESTADO:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <Spinner
                    android:id="@+id/spn_editar_estado"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:entries="@array/estado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btn_actualizar_usuario"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_login_redondeado"
                    android:text="GRABAR"
                    android:textSize="18sp"
                    app:backgroundTint="#F44336"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>